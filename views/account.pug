head
	title
	meta(charset='utf-8')
	meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
	link(rel='stylesheet', href='../public/style.css')
.background(style="display:flex; margin: 20px auto; max-width: 1024px; border: 1px solid #ddd; padding: 20px;")
	.dishes
		h1(style="padding-bottom: 40px;") #{title}
			each dish in dishes
				li(style="font-weight: bold; list-style-type: none; margin: 10px auto; font-size: 22px; margin-top: 20px;") #{dish.name}
				li(style="font-weight: normal; list-style-type: none; margin:0; font-size: 18px;") #{dish.content}
	.picture(style="margin-left: 20px;")
		img(width='500px;', src='https://images.unsplash.com/photo-1501595091296-3aa970afb3ff?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1650&q=80')
